    <nav className="bg-white shadow-purple">
      <div className="container mx-auto px-4">
        <div className="flex justify-between items-center py-4">
          <Link to="/" className="flex items-center space-x-2">
            <div className="w-10 h-10 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-lg flex items-center justify-center shadow-sm">
              <span className="text-white text-xl font-bold font-heading">QG</span>
            </div>
            <h2 className="text-2xl font-bold text-gradient bg-gradient-to-r from-primary-700 to-secondary-700 bg-clip-text text-transparent font-heading">QuickGrocery</h2>
          </Link>

          {isAuthenticated ? (
            <>
              <div className="hidden md:flex space-x-6 items-center">
                <Link
                  to="/"
                  className={`${location.pathname === '/' ? 'text-primary-500 font-medium' : 'text-neutral-600 hover:text-primary-500'} transition-colors`}
                >
                  Employees
                </Link>
                <Link
                  to="/add"
                  className={`${location.pathname === '/add' ? 'text-primary-500 font-medium' : 'text-neutral-600 hover:text-primary-500'} transition-colors`}
                >
                  Add Employee
                </Link>
                <Link
                  to="/salaries"
                  className={`${location.pathname.startsWith('/salar') ? 'text-primary-500 font-medium' : 'text-neutral-600 hover:text-primary-500'} transition-colors`}
                >
                  Salary Management
                </Link>

                <div className="relative ml-3">
                  <button
                    onClick={() => setIsMenuOpen(!isMenuOpen)}
                    className="flex text-sm border-2 border-transparent rounded-full focus:outline-none focus:border-neutral-300"
                    id="user-menu-button"
                  >
                    <div className="h-8 w-8 rounded-full bg-primary-200 flex items-center justify-center text-white">
                      {user?.name?.charAt(0)?.toUpperCase() || 'U'}
                    </div>
                  </button>

                  {isMenuOpen && (
                    <div
                      className="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-card py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10 animate-fade-in"
                      role="menu"
                      aria-orientation="vertical"
                      aria-labelledby="user-menu-button"
                    >
                      <div className="px-4 py-2 text-sm text-neutral-700 border-b border-neutral-100">
                        <p className="font-medium">{user?.name}</p>
                        <p className="text-xs text-neutral-500">{user?.email}</p>
                      </div>
                      <Link
                        to="/profile"
                        className="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50"
                        onClick={() => setIsMenuOpen(false)}
                      >
                        Your Profile
                      </Link>
                      <button
                        onClick={() => {
                          setIsMenuOpen(false);
                          handleLogout();
                        }}
                        className="block w-full text-left px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50"
                      >
                        Sign out
                      </button>
                    </div>
                  )}
                </div>
              </div>

              {/* Mobile menu button */}
              <div className="md:hidden flex items-center">
