                        onClick={() => setIsMenuOpen(false)}
                      >
                        Employees
                      </Link>
                      <Link
                        to="/add" 
                        className={`${location.pathname === '/add' ? 'text-primary-500 font-medium' : 'text-neutral-600'} px-3 py-2 rounded-md text-base`}
                        onClick={() => setIsMenuOpen(false)}
                      >
                        Add Employee
                      </Link>
                      <Link
                        to="/salaries" 
                        className={`${location.pathname.startsWith('/salar') ? 'text-primary-500 font-medium' : 'text-neutral-600'} px-3 py-2 rounded-md text-base`}
